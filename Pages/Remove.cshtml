@page
@model RemoveModel
@{
    ViewData["Title"] = "Remove Package";
}

<div class="text-center">
    <h1 class="display-4">Amarillo Apartment Package Management</h1>
    <p>Remove Package</p>
</div>
<form method="post" id="form">
    <div class="form-group">
        <label asp-for="PackageSelect" class="control-label"></label>
        <select class="form-control" asp-for="PackageSelect" asp-items="Model.PackagesDropDown" form="form">
            <option value="">--Select Package to Remove--</option>  
        </select>
        <span asp-validation-for="PackageSelect" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}