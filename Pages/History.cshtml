@page
@model HistoryModel
@{
    ViewData["Title"] = "Package History";
}

<div class="text-center">
    <h1 class="display-4">Amarillo Apartment Package Management</h1>
    <p>Package History</p>
</div>
<form method="post" id="form">
    <div class="form-group">
        <label asp-for="ResidentSelect" class="control-label"></label>
        <select class="form-control" asp-for="ResidentSelect" asp-items="Model.ResidentsDropDown" form="form">
            <option value="">--Select Resident--</option>  
        </select>
        <span asp-validation-for="ResidentSelect" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
<p>
    @foreach (var item in @Model.PackagesSelected) {
        @item.Text<br>
    }
</p>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}